[
  {
    "processor_name": "rounded_corner",
    "border_radius": "{{vh(2)}}"
  },
  {
    "processor_name": "shadow",
    "shadow_radius": "{{vh(1)}}",
    "shadow_color": "black"
  },
  {
    "processor_name": "rich_text",
    "text": "{{ exif.CameraModelName|default('-') | replace('_', '') }}",
    "font_path": "fonts/AlibabaPuHuiTi-2-85-Bold.otf",
    "height": "{{vh(3)}}",
    "trim": true,
    "color": "white"
  },
  {
    "processor_name": "rich_text",
    "text": "{{exif.FocalLengthIn35mmFormat|replace(' ', '')|default('-')}} f/{{exif.AperatureValue or exif.FNumber|default('-')}} {{exif.ShutterSpeed or exif.ShutterSpeedValue|default('-')}}s ISO{{exif.ISO|default('0')}}",
    "font_path": "fonts/AlibabaPuHuiTi-2-45-Light.otf",
    "height": "{{vh(3)}}",
    "trim": true,
    "color": "white"
  },
  {
    "processor_name": "concat",
    "alignment": "center",
    "spacing": "{{vh(3)}}",
    "direction": "vertical",
    "select": "[2,3,4]"
  },
  {
    "processor_name": "blur",
    "blur_radius": "{{vh(3)}}",
    "buffer_path": [
      "{{file_path}}"
    ]
  },
  {
    "processor_name": "resize",
    "scale": 2
  },
  {
    "processor_name": "alignment",
    "weights": "[100,-100]",
    "select": "[5,7]"
  },
  {
    "processor_name": "crop",
    "width": "{{vw(135)}}",
    "height": "{{vh(135)}}",
    "offset": "[0, -{{vh(3)}}]"
  }
]